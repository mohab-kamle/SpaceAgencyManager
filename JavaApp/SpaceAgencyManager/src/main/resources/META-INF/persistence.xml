<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence                                  https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="SpaceManagerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>database.entities.Research</class>
    <class>database.entities.Mission</class>
    <class>database.entities.Conduct</class>
    <class>database.entities.Participate</class>
    <class>database.entities.Partner</class>
    <class>database.entities.Planet</class>
    <class>database.entities.Spacecraft</class>
    <class>database.entities.TakesOff</class>
    <class>database.entities.Staff</class>
    <class>database.entities.Equipment</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/spaceagency?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
